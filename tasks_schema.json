{
  "$id": "https://example.com/task-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task Schema",
  "type": "object",
  "properties": {
    "completed": {
      "type": "boolean"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "details": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "user": {
      "type": "string",
      "pattern": "^/users/[A-Za-z0-9_-]+$"
    }
  },
  "required": ["completed", "created", "details", "title", "user"],
  "additionalProperties": false
}
